<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DaysTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">#ffffff</item>
        <item name="tabMaxWidth">150dp</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="DayName" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DayNumber" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_below">@id/day_of_week_name</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DayIcon" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_below">@id/day_of_month_number</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">4dp</item>

    </style>

    <style name="DayTemp" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_below">@id/day_icon</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
